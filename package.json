  "private": true,
  "author": "Sina Bayandorian <sina.sina.bayan@protonmail.com> (https://portfolio-sina-byn.vercel.app/)",
  "description": "A web application that assists in creating GitHub README.md files, featuring real-time Markdown preview and a Markdown table editor, both supporting tab synchronization",
  "repository": "github:sina-byn/read-u",
  "homepage": "https://github.com/sina-byn/read-u#readme",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "next build",
    "prebuild:all": "npm run css:generate && npm run template:generate",
    "build:all": "npm run build",
    "lint": "next lint",
    "css:generate": "node scripts/generate-css.js",
    "template:format": "prettier ./src/templates/templates.json --write",
    "template:generate": "node scripts/generate-templates.js",
    "posttemplate:generate": "npm run template:format",
    "hooks:update": "simple-git-hooks"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "animejs": "^3.2.2",
    "clsx": "^2.1.1",
