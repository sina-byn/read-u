    "markdown",
    "markdown-editor",
    "online-markdown-editor",
    "readme",
    "readme-editor",
    "online-readme-editor",
    "markdown-table-editor",
    "online-markdown-table-editor",
    "readme.md",
    "github-readme",
    "markdown-cheatsheet"
  ]
